version: 2.1
jobs:
  build:
    machine:
      image: ubuntu-1604:201903-01
    steps:
    - checkout
{%- for stage in jobs|map(attribute='stage')|unique|list %}
  {%- for job in jobs|selectattr('stage' ) %}
    {%- if job.stage == stage %}
    - run:
        name: {{ job.name }}
        command: {{ job.cmd }}
    {%- endif %}
  {%- endfor %}
{%- endfor %}
